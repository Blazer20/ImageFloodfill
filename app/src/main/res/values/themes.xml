<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SmartStaffSolutionTask" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.SmartStaffSolutionTask.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/round_shape</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.SmartStaffSolutionTask.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="Theme.SmartStaffSolutionTask.Text.Primary" />

    <style name="Theme.SmartStaffSolutionTask.Text.Title">
        <item name="android:textSize">32sp</item>
    </style>
</resources>